//This repository has codes and mini projects that i made in C++ programming language
//# Array-sum-of-two-numbers-and-display-of-them
#include <iostream>
using namespace std;

int main()
{
    int arr1[5], arr2[5], sum[5];

    cout << "Enter 5 elements for first array:\n";
    for(int i = 0; i < 5; i++){
        cout << "arr1[" << i << "] = ";
        cin >> arr1[i];
    }

    cout << "\nEnter 5 elements for second array:\n";
    for(int i = 0; i < 5; i++){
        cout << "arr2[" << i << "] = ";
        cin >> arr2[i];
    }

    for(int i = 0; i < 5; i++){
        sum[i] = arr1[i] + arr2[i];
    }

    cout<<"display array: ";
    for(int i = 0;i < 5;i++){
        cout   <<" "<< sum[i];

    }

    return 0;
}  
